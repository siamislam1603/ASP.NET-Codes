@model ViewModels.Models.Customer
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>New Customer</h1>
@using (Html.BeginForm("Create", "Customer"))
{
    <div class="form-group">
        @Html.LabelFor(c=>c.name)
        @Html.TextBoxFor(c => c.name, new { @class="form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(c=>c.birthdate)
        @Html.TextBoxFor(c => c.birthdate, new { @class="form-control"})
    </div>   
    <div class="form-check">
        @Html.CheckBoxFor(c=>c.IsSubscribedToNewsLetter,new { @class="form-check-input"})
        Subscribed to news letter?
    </div>
}


