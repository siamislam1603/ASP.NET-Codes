@model ViewModels.Models.Movie
@{
    ViewBag.Title = "MovieDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>@Model.name</h2>
<ul>
    <li>Genre:@Model.genre.genre</li>
    <li>Release Date:@Model.ReleaseDate</li>
    <li>Added Date:@Model.AddedDate</li>
    <li>Number In Stocks:@Model.NoInStock</li>
</ul>