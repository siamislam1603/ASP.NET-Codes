@model ViewModels.ViewModels.RandomMovieViewModel
@{
    ViewBag.Title = "MoviesList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@*
    this is multiline
       comments
*@
@{
    var className = Model.movie.Count > 0 ? "Popular" : null;
}
<h1 class="@className">Movies</h1>
@Html.ActionLink("Add Movie", "MoviesForm","Movies", null, new { @class="btn btn-primary mb-2"})
<table class="table table-bordered">
    <thead>
        <tr>
            <th scope="col">Movie</th>
            <th scope="col">Genre</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movies in Model.movie)
        {
            <tr>
                <td>
                    @Html.ActionLink(movies.name, "EditMovieInfo", "Movies", new { id = movies.id }, null)
                </td>
                <td>
                    @movies.genre.genre
                </td>
            </tr>
        }
    </tbody>
</table>